import java.util.Scanner;  
  public class Exercise2_23MH
   {
     public static void main(String[] args)
      {   
       // Create a Scanner
       Scanner input = new Scanner(System.in);
    
        // Receive the driving distance 
        System.out.print( "Enter driving distance: ");
       double drivingDistance = input.nextDouble();
       
        Scanner input2 = new Scanner(System.in);
    
        // Receive the miles per gallon
        System.out.print("Enter miles per gallon: ");
       double milesPerGallon = input.nextDouble();
       
       // Receive the price per gallon
        System.out.print("Enter price per gallon: ");
       double pricePerGallon = input.nextDouble();
       
       //Calculations
       double totalCost = drivingDistance / milesPerGallon * pricePerGallon ;


   
         
           System.out.println("Your total cost is " + totalCost); 
    
     }
   }
